{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "sync": "env YUQUE_TOKEN=aCKllKqUGCxkLCEShGroAxxhv1GOMeAyiSk1Px0z yuque-hexo sync",
    "serve": "cd public && static-server -i index.html -p 80"
  },
  "hexo": {
    "version": "4.2.1"
  },
  "dependencies": {
    "ali-oss": "^6.8.0",
    "ali-oss-upload-cli": "^1.3.0",
    "hexo": "^4.0.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-lazyload-image": "^1.0.9",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0"
  },
  "yuqueConfig": {
    "postPath": "source/_posts/yuque",
    "cachePath": "yuque.json",
    "mdNameFormat": "slug",
    "adapter": "hexo",
    "concurrency": 5,
    "baseUrl": "https://www.yuque.com/api/v2",
    "login": "xcodebuild",
    "repo": "blog",
    "onlyPublished": false
  },
  "devDependencies": {
    "hexo-generator-feed": "^2.2.0",
    "hexo-generator-sitemap": "^2.0.0",
    "yuque-hexo": "^1.6.2"
  }
